<div class="post">
  <h2><%= link_to h(post.title), post %></h2>
  by <strong><%= h(post.user.login) %></strong>
  <%= simple_format h(post.body) %>
  <% a = post.attachment %>
  <% if post.attachment.file? %>
    <%= link_to 'Attachment (' +
      File.basename(a.original_filename) + ', ' +
      number_to_human_size(a.size) + ')',
      post.attachment.url
    %>
  <% end %>
  <%- if logged_in? && current_user.can_edit?(post) %>
    <%= link_to 'Edit', edit_post_path(post) %>
    <%= link_to 'Destroy', post,
      :confirm => 'Are you sure?',
      :method => :delete
    %>
  <%- end %>
  <hr />
<div>
