<div class="post">
  <h2><%= link_to post.title, post %></h2>
  <%= simple_format post.body %>
  <%= link_to 'Attachment', post.attachment.url if !post.attachment.url.empty?%>
  <%- if logged_in? %>
    <%= link_to 'Edit', edit_post_path(post) %>
    <%= link_to 'Destroy', post,
      :confirm => 'Are you sure?',
      :method => :delete
    %>
  <%- end %>
  <hr />
<div>
