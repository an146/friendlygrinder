<h1>New post</h1>

<% form_for :post, :url => { :action => "create" }, :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :attachments %><br />
    <div id="attachment_list"><ul id="pending_files"></ul></div>
    <%= f.file_field :attachment %>
    <script type="text/javascript">
      var multi_selector = new MultiSelector($('pending_files'));
      multi_selector.addElement($('post_attachment'));
    </script>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', posts_path %>
